generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgres"
    url      = env("DATABASE_URL")
}

model Categories {
    id    String  @id
    name  String
    Tasks Tasks[]
}

model Tasks {
    id            String     @id
    creation_date DateTime   @default(now())
    done          Boolean
    description   String
    category_id   String
    Categories    Categories @relation(fields: [category_id], references: [id])
}
